$include /etc/inputrc

set completion-ignore-case on

# Display all possible matches for an ambiguous pattern at first Tab
set show-all-if-ambiguous on

# List the candidates on the first tab without auto-completion
set menu-complete-display-prefix on

# Replace completions having common prefixes longer than the specified length
# with ellipses
set completion-prefix-display-length 2

# Append slash to completed symlink directories
set mark-symlinked-directories on

# Set Tab and Shift-Tab to cycle through completions
TAB: menu-complete
"\e[Z": menu-complete-backward
